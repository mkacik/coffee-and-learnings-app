!!!
%html
  %head
    %link{rel: 'stylesheet', href: '/style.css'}/
    %meta{property: 'og:type', content: 'website'}/
    %meta{property: 'fb:app_id', content: '749956035082575'}/
    %meta{property: 'fb:admins', content: '694062997'}/
    = yield :head
  %body
    :javascript
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '749956035082575',
          xfbml      : true,
          version    : 'v2.2'
        });
        FB.Event.subscribe('edge.create', function(url) {
          var req_url = url + '/votes';
          var request = new XMLHttpRequest();
          request.open('POST', req_url, /* async */ false);
          request.send();
        });
        FB.Event.subscribe('edge.remove', function(url) {
          var req_url = url + '/votes/1';
          var request = new XMLHttpRequest();
          request.open('DELETE', req_url, /* async */ false);
          request.send();
        })
      };
      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    = yield
